{% extends '::base.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    <div class="container">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Company details</h2>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Website
                                </th>
                                </thead>
                                {% if company != false %}
                                    <tr>
                                        <td>{{company.companyName}}</td>
                                        <td>{{company.address}}</td>
                                        <td>{{company.email}}</td>
                                        <td>{{company.phone}}</td>
                                        <td>{{company.website}}</td>
                                    </tr>
                                {% endif %}

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Edit company details</h2>
                    <div class="col-md-12">
                        
                        
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                        
                        
                        
                    </div>
                </div>
            </div>
        </div>


    {% endblock %}

    {% block javascripts %}

    {% endblock %}


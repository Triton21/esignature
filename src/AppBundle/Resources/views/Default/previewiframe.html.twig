        <style type="text/css">
            body {
                background: rgb(204,204,204); 
            }
            div.relative {
                background-color: white;
                position: relative;
                width: 210mm;
                height: 297mm;
                display: block;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 1cm;
                box-shadow: 0 0 0.5cm rgba(0,0,0,0.5);
            }

            div.footer {
                position: absolute;
                bottom: 10px;
                width: 210mm;
                padding-bottom: 1cm;
                padding-left: 1.5cm;
                padding-right: 1.5cm;
            }
            
            div.header {
                position: relative;
                top: 10px;
                width: 210mm;
                padding-top: 1cm;
                padding-left: 1.5cm;
                padding-right: 1.5cm;
            }
            div.pagebody {
                position: relative;
                top: 10px;
                width: 210mm;
                padding-bottom: 1cm;
                padding-top: 0cm;
                padding-left: 1.5cm;
                padding-right: 1.5cm;
            }

        </style>
    </head>
    <body>


        {{firstpage|raw}}
        {{content|raw}}
        {{signpage|raw}}



        <script>
            $(document).ready(function () {
                var displaySign = $("#mySign")[0];
                var ctx = displaySign.getContext("2d");
                var image = new Image();
                image.onload = function () {
                    ctx.drawImage(image, 0, 0, 300, 100);
                };
                image.src = '{{signImage}}';



            });
        </script>


    </body>

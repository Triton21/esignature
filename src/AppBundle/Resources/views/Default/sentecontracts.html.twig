                                                                                    e.preventDefault();
                                                                                    modal.style.display = "block";
                                                                                    var contractId = $(this).attr('action-data');
                                                                                    opencontract(contractId);
                                                                                });
                                                                                $(document).on('click', ".close", function () {
                                                                                    modal.style.display = "none";
                                                                                });
                                                                                $(document).on('click', window, function (event) {
                                                                                    if (event.target == modal) {
                                                                                    modal.style.display = "none";
                                                                                }
                                                                                });
                                                                            });

                                                                            function opencontract(contractId) {

                                                                                var data = {'myid': contractId};
                                                                                    var myUrl = "{{path('app_ajaxOpenContract')}}";
                                                                                    $.ajax({
                                                                                        type: 'POST',
                                                                                        url: myUrl,
                                                                                        cache: false,
                                                                                        data: data,
                                                                                        dataType: "json",
                                                                                        success: function (data)
                                                                                        {
                                                                                            var contentDiv = document.getElementById('modalContent');
                                                                                            contentDiv.innerHTML = data.html;
                                                                                            var displaySign = $("#mySign")[0];
                                                                                            var ctx = displaySign.getContext("2d");
                                                                                            var image = new Image();
                                                                                            image.onload = function () {
                                                                                            ctx.drawImage(image, 0, 0, 300, 100);
                                                                                            };
                                                                                            image.src = data.image;
                                                                                            //client signature display
                                                                                            var clientSign = $("#clientSignature")[0];
                                                                                            var ctx2 = clientSign.getContext("2d");
                                                                                            var image2 = new Image();
                                                                                            image2.onload = function () {
                                                                                            ctx2.drawImage(image2, 0, 0, 400, 120);
                                                                                            };
                                                                                            image2.src = data.clientImage;
                                                                                            
                                                                                        }
                                                                                    });
                                                                            }

                                                                            $(document).on('click', "#disableContract", function (e) {
                                                                                var contractId = $(this).attr('action-data');
                                                                                var data = {'myid': contractId};
                                                                                var myUrl = "{{path('app_ajaxTokenDisable')}}";
                                                                                $.ajax({
                                                                                    type: 'POST',
                                                                                    url: myUrl,
                                                                                    cache: false,
                                                                                    data: data,
                                                                                    dataType: "json",
                                                                                    success: function (response) {
                                                                                        console.log($(e.target));
                                                                                        $('#econtractRow' + contractId).toggleClass('inactiveRow');
                                                                                        $('#econtractRow' + contractId).toggleClass('activeRow');
                                                                                        $('#activeSpan' + contractId).toggleClass('glyphicon-ok greenColor');
                                                                                        $('#activeSpan' + contractId).toggleClass('glyphicon-remove redColor');
                                                                                        if ($('#econtractRow' + contractId).hasClass('inactiveRow')) {
                                                                                            $(e.target).html('Enable');
                                                                                            $(e.target).toggleClass('btn-danger');
                                                                                            $(e.target).toggleClass('btn-success');
                                                                                        } else {
                                                                                            $(e.target).html('Disable');
                                                                                            $(e.target).toggleClass('btn-danger');
                                                                                            $(e.target).toggleClass('btn-success');
                                                                                        }
                                                                                    },
                                                                                    complete: function () {
                                                                                        console.log('Request is complete');
                                                                                    },
                                                                                    error: function () {
                                                                                        console.log('Oops...there was an error!');
                                                                                    }
                                                                                });
                                                                            });
                                                                        });                                                                    </script>

{% extends '::adminbase.html.twig' %}
{% form_theme password_form 'LoginBundle:Form:formThemingRewrite.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-lg-offset-1 col-lg-10">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Change password for: {{entity.username}} </h2>
                    {% if app.session.flashbag.has('danger') %}
                        <div class="alert alert-danger">
                            {% for message in app.session.flashbag.get('danger') %}
                                {{ message }}
                            {% endfor %}
                        </div>
                    {% endif %}

                    {{ form_start(password_form, {attr: {novalidate:'novalidate'}}) }}

                    {{ form(password_form) }}

                    {{ form_end(password_form) }}
                    <div class="center">
                        <a href="{{ path('admin') }}">
                            <i class="glyphicon glyphicon-arrow-left"></i>   Back to the list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}